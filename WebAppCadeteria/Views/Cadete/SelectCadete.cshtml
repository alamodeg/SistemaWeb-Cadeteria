@model Cadeteria.Model.Cadete

<h1>Modificar Cadete</h1>

<form asp-action="EditCadete" method="post">
    <div class="form-group">
        <label for="id"></label>
        <input type="hidden" name="id_cadete" value="@Model.Id" required />
    </div>
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="apellido">Apellido</label>
        <input type="text" name="apellido" value="@Model.Apellido" required />
    </div>
    <div class="form-group">
        <label for="tel">Telefono</label>
        <input type="text" name="tel" value="@Model.Telefono" maxlength="12" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>